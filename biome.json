            "oninput",
            "oninvalid",
            "ontimeupdate",
            "ondurationchange",
            "onselectionchange",
            "onmouseup",
            "location",
            "onkeypress",
            "onpointerleave",
            "oncontextlost",
            "ondrop",
            "onsecuritypolicyviolation",
            "oncontentvisibilityautostatechange",
            "ondeviceorientation",
            "onseeking",
            "onrejectionhandled",
            "onunload",
            "onmouseleave",
            "onhashchange",
            "onpointerenter",
            "onmousewheel",
            "onunhandledrejection",
            "ondragenter",
            "onpopstate",
            "onpagereveal",
            "onemptied"
          ]
        }
      }
    ],
    "assist": {
      "enabled": true,
      "actions": { "source": { "organizeImports": "on" } }
    },
    "css": {
      "parser": {
        "tailwindDirectives": true
      }
    }
  }